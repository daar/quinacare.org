---
import '/src/styles/global.css'

interface Props {
  title?: string;
}

const { title = 'Quina Care - Zorg Zonder Grenzen' } = Astro.props;
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Stichting Quina Care brengt medische expertise naar de meest afgelegen gebieden van de Amazone. Omdat elk leven telt." />
    <title>{title}</title>
  </head>
  <body class="bg-white text-qcBlack">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
