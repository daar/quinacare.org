---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Blog</title>
	</head>
	<body>
		<h1>Blog</h1>
		<p><a href="/">Back to Home</a></p>
		<ul>
			{posts.map((post) => (
				<li>
					<a href={`/blog/${post.id}`}>{post.data.title}</a>
				</li>
			))}
		</ul>
	</body>
</html>
